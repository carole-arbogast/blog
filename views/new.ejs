<% include partials/header %>

<div class="ui main text container segment">
    <h1>Create a new Blog Post</h1>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input class="ui input" placeholder="Title" name = "blog[title]"></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input class="ui input" placeholder="Image link" name = "blog[image]"></input>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name = "blog[body]"></textarea>
        </div>
        <input class="ui teal basic button" type="submit"></input>
    </form>
</div>

<% include partials/footer %>