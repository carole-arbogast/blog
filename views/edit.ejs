<% include partials/header %>

<div class="ui main text container segment">
    <h1>Edit <%= blog.title %> </h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input class="ui input" value="<%= blog.title %>" name = "blog[title]"></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input class="ui input" value="<%= blog.image %>" name = "blog[image]"></input>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name = "blog[body]"> <%= blog.body %> </textarea>
        </div>
        <input class="ui teal basic button" type="submit"></input>
    </form>
</div>

<% include partials/footer %>